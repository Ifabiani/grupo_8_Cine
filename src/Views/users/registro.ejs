<!DOCTYPE html>
<html lang="en">

<%-include ('../partials/head')%>




<body class="body2">
    <span class="header-registro"><%-include ('../partials/header')%></span>
    
    <div>
        <a href="http://localhost:3031/"><img id="logo-registro" src="\Images\logo-1.png" alt=""></a>

    </div>
    <form action="/usuarios/registrar" method="POST" name="registro" id="form-registro" enctype="multipart/form-data">
        <div class="form">

            <h1>REGISTRO</h1>
            <% if (locals.errors) { 
                errors.forEach(error => { %> 
                    <p id="error"><%=error.msg%></p>
                    <%})}%>
            <div class="grupo">
                <input type="text" name="nombre" class="nombre" id="nombre" value="<%= locals.old && old.nombre ? old.nombre : null %>"><span class="barra"></span>
                <label for="">Nombre</label>               
            </div>
            <div class="grupo">
                <input type="text" name="apellido" id="apellido" value="<%= locals.old && old.apellido ? old.apellido : null %>"><span class="barra"></span>
                <label for="">Apellido</label>
            </div>
            <div class="grupo">
                <input type="date" name="nacimiento"  id="fecha" value="<%= locals.old && old.nacimiento ? old.nacimiento : null %>" ><span class="barra"></span>
                <label for="" id="fecha">Fecha de nacimiento</label>
            </div>
            <div class="grupo">
                <input type="text" name="email"  id="email" value="<%= locals.old && old.email ? old.email : null %>" ><span class="barra"></span>
                <label for="">Email</label>
            </div>
            <div class="grupo">
                <input type="password" name="password" id="password" value="<%= locals.old && old.password ? old.password : null %>"><span class="barra"></span>
                <label for="">Contrase√±a</label>
            </div >
                         
        
            <div class="grupo">
                <input type="file" name="imagen"  id="imagen"><span class="barra"></span>
                <label for="" id="fecha">Imagen</label>
            </div >
            <div class= "botones">
            <button class="button2" type="submit">Registrarse</button>
            <button class="button2" type="submit" ><a id="cancelar" href="http://localhost:3031/">Cancelar</a></button>
            </div>   
        </div>
        <div class="errores">
    <ul>
    </ul>    
    </div>

    </form>
    
    <span class="footer-registro"><%-include ('../partials/footer')%></span>
    <script src="/js/registroUsuario.js"></script>
</body>

</html>