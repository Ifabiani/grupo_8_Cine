<!DOCTYPE html>
<html lang="en">

<%-include ('../partials/head')%>




<body class="body2">
    <span class="header-registro"><%-include ('../partials/header')%></span>
    
    <div>
        <a href="http://localhost:3031/"><img id="logo-registro" src="\Images\logo-1.png" alt=""></a>

    </div>
    <form action="/usuarios/editar/<%= userToEdit.id %>" id="form-registro" method="POST" enctype="multipart/form-data" >
        <div class="form">

            <h1>EDITAR REGISTRO</h1>
            <% if (locals.errors) { 
                errors.forEach(error => { %> 
                    <p id="error"><%=error.msg%></p>
                    <%})}%>
            <div class="grupo">
                <input type="text" name="nombre" id="name" value="<%= userToEdit.nombre%>" ><span class="barra"></span>
                <label for="">Nombre</label>
            </div>
            <div class="grupo">
                <input type="text" name="apellido" id="name" value="<%= userToEdit.apellido%>" ><span class="barra"></span>
                <label for="">Apellido</label>
            </div>
            <div class="grupo">
                <input type="date" name="nacimiento" id="name" id="fecha" value="<%= userToEdit.nacimiento%>" ><span class="barra"></span>
                <label for="" id="fecha">Fecha de nacimiento</label>
            </div>
            <div class="grupo">
                <input type="email" name="email" id="name" value="<%= userToEdit.email%>" ><span class="barra"></span>
                <label for="">Email</label>
            </div>
            <div class="grupo">
                <input type="password" name="password" id="name"  ><span class="barra"></span>
                <label for="">Contraseña</label>
            </div >
            <div class="grupo2">
                <label class="grupo1" for="">Categoria</label>
               <select name="categoria"  value="<%= userToEdit.categoria%>">
                <option >Elige una opción</option>
               <option value="Administrador" >Administrador</option>
               <option value="Usuario" >Usuario</option>
                </select>
                
            </div >
            <div class="grupo">
                <input type="file" name="imagen" id="name"  ><span class="barra"></span>
                <label for="" id="fecha">Imagen</label>
            </div >
            <div class= botones>
            <button class="button2" type="submit">Editar</button>
            <button class="button2" type="submit">Cancelar</button>
            </div>   
        </div>


    </form>
    <span class="footer-registro"><%-include ('../partials/footer')%></span>
</body>

</html>